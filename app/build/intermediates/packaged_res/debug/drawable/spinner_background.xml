<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="4dp"/>
        </shape>
    </item>
    <item android:width="24dp" android:height="24dp" android:gravity="end|center_vertical">
        <bitmap android:src="@drawable/ic_down_icon" android:gravity="fill" />
    </item>
    <item android:top="-2dp" android:right="-2dp" android:left="-2dp">
        <shape>
            <solid android:color="@android:color/transparent" /> <!-- Transparent color for main part -->
            <stroke android:width="1dp" android:color="#FF000000" /> <!-- Border color -->
        </shape>
    </item>
</layer-list>